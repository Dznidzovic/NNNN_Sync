<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Grants edit permissions for the NPN field on Account, Contact, and Lead objects. Users can manually edit NPN values. Producer lookup, NPN Status (formula), and NPN Sync Error (formula) fields remain read-only.</description>

    <!-- Account - NPN Editable -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Account.ht_NPN__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Account - Producer Read Only -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Account.ht_Producer__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Account - NPN Status Read Only (Formula Field) -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Account.ht_NPNStatus__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Account - NPN Sync Error Read Only (Formula Field) -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Account.ht_NPNSyncError__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Contact - NPN Editable -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Contact.ht_NPN__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Contact - Producer Read Only -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Contact.ht_Producer__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Contact - NPN Status Read Only (Formula Field) -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Contact.ht_NPNStatus__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Contact - NPN Sync Error Read Only (Formula Field) -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Contact.ht_NPNSyncError__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Lead - NPN Editable -->
    <fieldPermissions>
        <editable>true</editable>
        <field>Lead.ht_NPN__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Lead - Producer Read Only -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Lead.ht_Producer__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Lead - NPN Status Read Only (Formula Field) -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Lead.NPN_Status__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <!-- Lead - NPN Sync Error Read Only (Formula Field) -->
    <fieldPermissions>
        <editable>false</editable>
        <field>Lead.ht_NPNSyncError__c</field>
        <readable>true</readable>
    </fieldPermissions>

    <hasActivationRequired>false</hasActivationRequired>
    <label>HT NIPR Edit NPN Access</label>
</PermissionSet>
